<div class="modal-dialog modal-content shadow" style="padding: 20px; margin: 330px;">
    <%= form_with url: "/tasks/scoring/#{task.id.to_s}", method: :post do |form| %>
        <div class="form-group mx-2 mb-3">
                    <td><%= task.data_manipulation_score %></td>
            <label for="owner">Complexity</label>
            <%= form.text_field :complexity_score, value: task.complexity_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Priority</label>
            <%= form.text_field :priority_score, value: task.priority_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Duration</label>
            <%= form.text_field :duration_score, value: task.duration_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Front-end</label>
            <%= form.text_field :frontend_score, value: task.frontend_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Back-end</label>
            <%= form.text_field :backend_score, value: task.backend_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Infrastructure</label>
            <%= form.text_field :infrastructure_score, value: task.infrastructure_score, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Data-manipulation</label>
            <%= form.text_field :data_manipulation_score, value: task.data_manipulation_score, style: "width: 95%"%>
        </div>
        <center>
        <div class="inline" style= "display: block; margin-left: auto; margin-right: 0;">
            <button type="button" class="btn btn-secondary" style= "width:30%;" data-dismiss="modal" >Close</button>
            <button type="button" class="btn btn-custom-success btn-sm" style= "width:30%;">
                <%= form.submit %>
            </button>
        </div>
        </center>
    <% end %>
</div>
