<div class="modal-dialog modal-content shadow" style="padding: 20px; margin: 330px;">
    <%= form_with url: "/repositories/create", method: :post do |form| %>
        <div class="form-group mx-2 mb-3">
            <label for="owner">Owner</label>
            <%= form.text_field :owner, value: repo.owner, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Repository name</label>
            <%= form.text_field :title, value: repo.title, style: "width: 95%"%>
        </div>
        <div class="form-group mx-2">
            <label for="repo_name">Description</label>
            <%= form.text_field :description, value: repo.description, style: "width: 95%"%>
        </div>
        <center>
        <div class="inline" style= "display: block; margin-left: auto; margin-right: 0;">
            <button type="button" class="btn btn-secondary" style= "width:30%;" data-dismiss="modal" >Close</button>
            <button type="button" class="btn btn-custom-success btn-sm" style= "width:30%;">
                <%= form.submit %>
            </button>
        </div>
        </center>
    <% end %>
</div>
